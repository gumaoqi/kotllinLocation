<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/gu_linearLayout_root_vertical">

    <ImageView style="@style/gu_imageView_weight_vertical" />

    <ImageView
        style="@style/gu_imageView_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher_round" />

    <ImageView style="@style/gu_imageView_weight_vertical" />

    <EditText
        android:id="@+id/fragment_find_password_phone_et"
        style="@style/gu_editText_weight"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_size_level_30"
        android:layout_marginRight="@dimen/margin_size_level_30"
        android:layout_weight="0"
        android:digits="0123456789"
        android:hint="@string/gu_input_phone"
        android:maxLength="11"
        android:text="" />

    <EditText
        android:id="@+id/fragment_find_password_sms_et"
        style="@style/gu_editText_weight"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_size_level_30"
        android:layout_marginRight="@dimen/margin_size_level_30"
        android:layout_weight="0"
        android:digits="0123456789"
        android:hint="@string/gu_input_sms"
        android:maxLength="6"
        android:text="" />


    <EditText
        android:id="@+id/fragment_find_password_password_et"
        style="@style/gu_editText_weight"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_size_level_30"
        android:layout_marginRight="@dimen/margin_size_level_30"
        android:layout_weight="0"
        android:hint="@string/gu_input_password"
        android:inputType="textPassword"
        android:maxLength="18"
        android:text="" />

    <EditText
        android:id="@+id/fragment_find_password_password_again_et"
        style="@style/gu_editText_weight"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_size_level_30"
        android:layout_marginRight="@dimen/margin_size_level_30"
        android:layout_weight="0"
        android:hint="@string/gu_input_password"
        android:inputType="textPassword"
        android:maxLength="18"
        android:text="" />


    <ImageView style="@style/gu_imageView_weight_vertical" />

    <LinearLayout
        style="@style/gu_linearLayout_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_level_30"
        android:layout_marginRight="@dimen/margin_size_level_30">

        <Button
            android:id="@+id/fragment_find_password_sms_bt"
            style="@style/gu_button_wrap_content"
            android:text="@string/gu_get_sms" />

        <ImageView style="@style/gu_imageView_weight_horizontal" />

        <Button
            android:id="@+id/fragment_find_password_bt"
            style="@style/gu_button_wrap_content"
            android:text="@string/gu_find_password" />
    </LinearLayout>

    <ImageView style="@style/gu_imageView_weight_vertical" />
</LinearLayout>
