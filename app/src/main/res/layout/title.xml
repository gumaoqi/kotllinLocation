<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_root_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_back"
            style="@style/gu_textView_center"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin_size_level_10"
            android:layout_weight="1"
            android:gravity="left" />

        <ImageView style="@style/gu_imageView_weight_horizontal" />

        <TextView
            android:id="@+id/title_title"
            style="@style/gu_textView_center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView style="@style/gu_imageView_weight_horizontal" />

        <TextView
            android:id="@+id/title_menu"
            style="@style/gu_textView_center"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/margin_size_level_10"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

    <ImageView style="@style/gu_recycler_headline_no_margin_horizontal" />
</LinearLayout>
